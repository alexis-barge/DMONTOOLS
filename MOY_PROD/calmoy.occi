#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks=12
#SBATCH --ntasks-per-node=24
#SBATCH --threads-per-core=1
#SBATCH -J zmoy_<year>
#SBATCH -e zmoy_<year>.e%j
#SBATCH -o zmoy_<year>.o%j
#SBATCH -A <account>
#SBATCH --time=0:30:00
#SBATCH --exclusive

ulimit -s unlimited
NB_NPROC=$SLURM_NTASKS
set -x
CONFIG=<CONFIG>
CASE=<CASE>

CONFCASE=${CONFIG}-${CASE}
CTL_DIR=<WPDIR>

#. $HOME/.profile
cd $CTL_DIR
. ./config_moy

liste=''
for m in $(seq 1 12 ) ; do
   mm=$(printf "%02d" $m )
   liste="$liste ./zz_calmoy_${mm}_<year>"
done

#
module load netcdf

runcode  $NB_NPROC <MPITOOLS>/mpi_shell $liste
